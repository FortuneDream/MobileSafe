<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--image设置固定值，解决大小不一的问题-->
    <ImageView
        android:id="@+id/img_ico"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/txt_run_process_name"
        style="@style/text_content_style"
        android:layout_toEndOf="@+id/img_ico"
        android:text="名字" />

    <TextView
        android:layout_toEndOf="@+id/img_ico"
        android:id="@+id/txt_process_size"
        style="@style/text_content_style"
        android:textColor="@color/text_s"
        android:layout_below="@id/txt_run_process_name"
        android:text="位置" />
    <CheckBox
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:clickable="false"
        android:id="@+id/cb_selected"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>