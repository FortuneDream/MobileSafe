<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yq="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudWhite"
    android:orientation="vertical"
    tools:context="com.example.dell.mobilesafe.activity.Setup1Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/titleGreen"
        android:gravity="center"
        android:text="3.设置安全号码"
        android:textColor="@color/textBlack"
        android:textSize="@dimen/title_size" />

    <!--用样式的办法写XML，drawableLeft可直接在文字左边设置图片-->
    <TextView
        style="@style/text_content_style"
        android:text="SIM卡变更后，\n报警短信回发给安全号码" />
    <EditText
        android:id="@+id/edt_number"
        android:hint="请输入安全号码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_selected_people"
        android:text="选择联系人"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_offline" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_offline" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_online" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_offline" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/bg_shouji" />
        <!--在backgroud中设置selector-->
        <!--因为四个界面都是3个相同的下一步按钮，所以设置为样式-->
        <Button style="@style/button_pre_style" />
        <Button style="@style/button_next_style" />
    </RelativeLayout>


</LinearLayout>
