<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.mobilesafe.activity.APPLockActivity">

    <TextView
        style="@style/title_one"
        android:text="程序锁" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_unlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_on"
            android:gravity="center"
            android:text="未加锁"
            android:textColor="@color/text"
            android:textSize="@dimen/text" />

        <TextView
            android:id="@+id/txt_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_off"
            android:gravity="center"
            android:text="已加锁"
            android:textColor="@color/text"
            android:textSize="@dimen/text" />
    </LinearLayout>
        <!--同一个Activity两个ListView-->
        <LinearLayout
            android:id="@+id/ll_unlock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_unlock_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未加锁软件：" />

            <ListView
                android:id="@+id/unlock_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_lock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_lock_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已加锁软件：" />

        <ListView
            android:id="@+id/lock_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>
