<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.mobilesafe.activity.LostFindActivity">

    <TextView
        style="@style/title_one"
        android:text="手机防盗" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text"
            android:textColor="@color/text"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="安全号码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_number"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/text"
            android:textColor="@color/text"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="xxxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        style="@style/divider"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--此TextView填充父窗体，使得整行生效-->
        <TextView
            android:textSize="@dimen/text"
            android:textColor="@color/text"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="防盗保护是否开启"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_lock"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ico_release_lock"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--此TextView填充父窗体，使得整行生效-->
        <TextView
            android:background="@drawable/selector_shape"
            android:onClick="reEnterSetting"
            android:clickable="true"
            android:textSize="@dimen/text"
            android:textColor="@color/text"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="重新进入设置向导"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text"
            android:textColor="@color/text"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="功能简介"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"/>

    <TextView
        style="@style/text_content_style"
        android:drawableStart="@android:drawable/star_big_on"
        android:text="GPS追求：#Location#" />

    <TextView
        style="@style/text_content_style"
        android:drawableStart="@android:drawable/star_big_on"
        android:text="播放报警音乐：#Alarm#" />

    <TextView
        style="@style/text_content_style"
        android:drawableStart="@android:drawable/star_big_on"
        android:text="远程删除数据：#WipeData#" />

    <TextView
        style="@style/text_content_style"
        android:drawableStart="@android:drawable/star_big_on"
        android:text="远程锁屏：#LockScreen#" />
</LinearLayout>
